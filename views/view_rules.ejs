<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stored Rules</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #007BFF;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        pre {
            background-color: #eee;
            padding: 10px;
            border-radius: 5px;
            overflow-x: auto;
        }
        a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
        a:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Stored Rules</h1>
    <table>
        <thead>
            <tr>
                <th>Rule Name</th>
                <th>Rule String</th>
                <th>AST</th>
            </tr>
        </thead>
        <tbody>
            <% rules.forEach(rule => { %>
                <tr>
                    <td><%= rule.name %></td>
                    <td><%= rule.ruleString %></td>
                    <td><pre><%= JSON.stringify(rule.ast, null, 2) %></pre></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/" class="button">Create a New Rule</a>
        <a href="/combine_rules" class="button">Combine Rules</a>
        <a href="/evaluate_rule" class="button">Evaluate Rules</a>
        <a href="/view_rules" class="button">Display All Rules</a>
</body>
</html>
